{
  "manifest_version": 3,
  "name": "Gemini 助手",
  "version": "1.0",
  "description": "A Chrome extension with a side panel for chatting with Google's Gemini AI.",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "icons/dot-16_1.png",
      "32": "icons/dot-32_1.png",
      "48": "icons/dot-48_1.png",
      "128": "icons/dot-128_1.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/dot-16_1.png",
    "32": "icons/dot-32_1.png",
    "48": "icons/dot-48_1.png",
    "128": "icons/dot-128_1.png"
  }
}